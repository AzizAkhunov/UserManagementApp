@model UserManagementApp.ViewModels.RegisterViewModel

<h3>Register</h3>

<form method="post" class="w-25 mx-auto mt-5">
    <input asp-for="Email" class="form-control mb-2" placeholder="Email" />
    <input asp-for="Password" type="password" class="form-control mb-2" placeholder="Password" />

    <button type="submit" class="btn btn-success w-100">Register</button>

    <div class="text-danger mt-2">
        @Html.ValidationSummary()
    </div>
    <div class="mt-3 text-center">
        <a href="/Auth/Login">LogIn</a>
    </div>
</form>